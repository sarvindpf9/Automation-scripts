url: {{ url }}
cloud: {{ cloud }}
environment: {{ environment }}
hosts:
  {%- for ip, host_data in hosts.items() %}
  {{ ip }}:
    ansible_ssh_user: "{{ host_data.ansible_ssh_user }}"
    ansible_ssh_private_key_file: "{{ host_data.ansible_ssh_private_key_file }}"
    roles:
      {%- for role in host_data.roles %}
      - "{{ role }}"
      {%- endfor %}
  {%- endfor %}

