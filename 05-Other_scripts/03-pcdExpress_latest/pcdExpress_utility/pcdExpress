    pcdInstallHelper.run_ansible_playbook(f'{clustername}-play_data/{sitename}/playbooks/{clustername}-blueprints_deploy.yaml', 'inventory/hosts', {"cloud_name": f"{sitename}", "cloudname": f"{sitename}"})

