    pcdInstallHelper.run_ansible_playbook(f'{clustername}-play_data/{sitename}/tasks/01-on_prem-trust-mgmt-certs.yml', f"{clustername}-play_data/{sitename}/inventory/{subsite}/hosts", {"cloud_name": f"{sitename}", "environment": f"{subsite}",  "IP_ADDRESS":f"{args.ip_addr}", "FQDN":f"{args.fqdn}", "FQDNINFRA":f"{args.fqdninfra}" })

